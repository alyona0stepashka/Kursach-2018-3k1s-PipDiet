                <StackPanel Margin="10,-5,9.4,10" Height="128">
                    <TextBlock Text="kisndfoubg" Name="blckBig" Foreground="PapayaWhip" TextWrapping="Wrap" Margin="81,20,4.2,5" FontFamily="AngryBirds" FontSize="20" Height="26" FontWeight="Bold"/>
